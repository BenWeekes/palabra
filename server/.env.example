# Palabra Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Agora Configuration
# =============================================================================
APP_ID=your_agora_app_id
APP_CERTIFICATE=your_agora_app_certificate

# =============================================================================
# Palabra Translation API
# =============================================================================
PALABRA_API_KEY=your_palabra_api_key
PALABRA_BASE_URL=https://api.palabra.ai

# Session timeout in minutes (auto-stop sessions after this duration)
# Default: 10 minutes
PALABRA_SESSION_TIMEOUT_MINUTES=10

# Idle timeout in seconds (auto-stop if no audio activity for this duration)
# Default: 60 seconds
PALABRA_IDLE_TIMEOUT_SECONDS=60

# =============================================================================
# Anam Avatar Configuration
# =============================================================================
# Set to true to enable Anam avatar rendering
ENABLE_ANAM=false

# Anam API credentials
ANAM_API_KEY=your_anam_api_key
ANAM_BASE_URL=https://api.anam.ai/v1

# Avatar settings
ANAM_AVATAR_ID=your_avatar_id
ANAM_QUALITY=high
ANAM_VIDEO_ENCODING=H264

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# =============================================================================
# Server Configuration
# =============================================================================
ALLOWED_ORIGIN=https://your-frontend-domain.com
PORT=7080
